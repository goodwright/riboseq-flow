#!/usr/bin/env nextflow

/*
 * -------------------------------------------------
 *  ulelab/RiboSeq_NextFlow config file
 * -------------------------------------------------
 * Default parameters config
 */

params {

    // reference
    fasta = "/camp/lab/ulej/home/users/farawar/genomes/hs/fasta/GRCh38.primary_assembly.genome.fa"
    fai = "/camp/lab/ulej/home/users/farawar/genomes/hs/fasta/GRCh38.primary_assembly.genome.fa.fai"
    gtf = "/camp/lab/ulej/home/users/farawar/genomes/hs/annotation/gencode.v29.annotation.gtf"

    // cutadapt
    adapter = 'AGATCGGAAGAGC'
    min_quality = 10
    min_readlength = 16

    // premapping
    // premap = true
    smallrna_genome = "/camp/lab/ulej/home/users/wilkino/genomes/hs/premapping/named_sn_sno_rRNA.gencode.v29.annotation.plus_oscar.fa"
    bowtie2_args = '--norc --no-unal --very-sensitive-local -N 1'

    // map
    star_args = '--outSAMtype BAM SortedByCoordinate --seedSearchStartLmax 15 --outReadsUnmapped Fastx --genomeLoad NoSharedMemory --outFilterMultimapNmax 1 --outFilterMismatchNoverReadLmax 0.08 --alignEndsType EndToEnd --quantMode TranscriptomeSAM --outSAMattributes Standard --quantTranscriptomeBan Singleend'

    // deduplication
    umi_separator = 'rbc:'
    // dedup_method = 'directional'

}