#!/usr/bin/env nextflow

/*
 * -------------------------------------------------
 *  iraiosub/riboseq test config file
 * -------------------------------------------------
 * Default parameters config
 */

includeConfig './genomes.config' 

params {
    config_profile_name        = 'riboseq test profile'
    config_profile_description = 'test dataset to check pipeline function'
    input = 'https://raw.githubusercontent.com/iraiosub/test_data/main/samplesheet.csv'

    // Reference
    fasta = "https://raw.githubusercontent.com/iraiosub/test_data/main/chr1.GRCh38.primary_assembly.genome.fa.gz"
    fai = "https://raw.githubusercontent.com/iraiosub/test_data/main/chr1.GRCh38.primary_assembly.genome.fa.fai"
    gtf = "https://raw.githubusercontent.com/iraiosub/test_data/main/chr1.gencode.v29.primary_assembly.annotation.gtf.gz"
    // star_index = "/camp/project/proj-luscombe-ule/working/ira-jure/ref/star_index"
    smallrna_fasta = "https://raw.githubusercontent.com/iraiosub/test_data/main/named_sn_sno_rRNA.gencode.v29.annotation.contaminant.fa.gz"

    // Adapter trimming and length filtering
    skip_preprocessing = false
    adapter_threeprime = null

    // Premapping
    skip_premap = false
    bowtie2_args = '--norc --no-unal --very-sensitive-local -N 1'

    // Mapping

    // Deduplication
    with_umi = true
    skip_umi_extract = true
    umi_separator = 'rbc:'
    skip_qc = false

    // Featurecounts
    strandedness = "forward"

}