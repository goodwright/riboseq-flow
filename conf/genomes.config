/*
 * -------------------------------------------------
 *  ulelab/riboseq 
 * -------------------------------------------------
 * Genomes config for the ribo-seq pipeline
 * Inspired by nf-core iGenomes config
 */

params.genomesdir = "/camp/project/proj-luscombe-ule/working/ira-jure/ref"

params {
    genomes {
        'GRCh38' {
            fasta = "${params.genomesdir}/GRCh38.primary_assembly.genome.fa"
            fai = "${params.genomesdir}/GRCh38.primary_assembly.genome.fa.fai"
            gtf = "${params.genomesdir}/gencode.v29.primary_assembly.annotation.gtf"
            star_index = "${params.genomesdir}/star_index"
            smallrna_fasta = "${params.genomesdir}/named_sn_sno_rRNA.gencode.v29.annotation.plus_oscar.fa.gz"
        }
        'GRCm38' {
            fasta = "${params.genomesdir}/mm/GRCm39.primary_assembly.genome.fa.gz"
            fai = "${params.genomesdir}/"
            gtf = "${params.genomesdir}/mm/gencode.vM27.primary_assembly.annotation.gtf.gz"
            star_index = "/camp/lab/luscomben/home/users/iosubi/projects/riboseq_nf/ref/mm/star_index"
            smallrna_fasta = "${params.genomesdir}/mm/GRCm38.p6.snRNA_snoRNA_rRNA_with_full_rRNA_OSCAR_fixed.fa.gz"
        }
    }
}
